# Motia Configuration
MOTIA_PORT=3000

# File Generation Configuration
FILE_STORAGE_PATH=./generated-files

# Email Delivery Configuration (Optional - for production)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourcompany.com

# Database Configuration (Optional - if you want to store schedules in DB instead of state)
# DATABASE_URL=postgresql://user:pass@localhost:5432/schedules

# Timezone Configuration
DEFAULT_TIMEZONE=UTC

# Cron Configuration (can override in code)
SCHEDULE_CHECKER_CRON=0 * * * *  # Every hour

# File Generation Settings
MAX_FILE_SIZE_MB=50
SUPPORTED_FORMATS=excel,csv,pdf

# Logging
LOG_LEVEL=info

# External Services (Optional)
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_S3_BUCKET=your-bucket-name
# AWS_REGION=us-east-1

